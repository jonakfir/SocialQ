{
	"name": "frontend",
	"private": true,
	"type": "module",
	"scripts": {
		"dev": "vite dev",
		"dev:fast": "SKIP_PRISMA_GENERATE=true vite dev",
		"build": "prisma generate && prisma db push --accept-data-loss --skip-generate && vite build",
		"vercel-build": "prisma generate && prisma db push --accept-data-loss --skip-generate && vite build",
		"preview": "vite preview",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"postinstall": "echo 'Skipping Prisma generate - run npm run prisma:generate manually if needed'",
		"migrate:prisma": "node migrate-prisma-to-postgres.js",
		"prisma:migrate": "prisma migrate dev",
		"prisma:migrate:deploy": "prisma migrate deploy",
		"prisma:db:push": "prisma db push",
		"prisma:generate": "prisma generate"
	},
	"dependencies": {
		"@prisma/client": "^6.13.0",
		"bcryptjs": "^3.0.2",
		"chart.js": "^4.5.1",
		"jose": "^6.0.12",
		"pg": "^8.11.5",
		"svelte-chartjs": "^3.1.5"
	},
	"devDependencies": {
		"@sveltejs/adapter-vercel": "^5.9.0",
		"@sveltejs/kit": "^2.31.0",
		"@sveltejs/vite-plugin-svelte": "^3.1.2",
		"autoprefixer": "^10.4.21",
		"better-sqlite3": "^9.6.0",
		"glob": "^11.0.3",
		"normalize-range": "^0.1.2",
		"path-scurry": "^2.0.1",
		"postcss": "^8.5.6",
		"prisma": "^6.13.0",
		"svelte": "^4.2.20",
		"svelte-check": "^3.6.0",
		"tailwindcss": "^3.4.17",
		"typescript": "^5.4.0",
		"vite": "^5.4.19"
	}
}
